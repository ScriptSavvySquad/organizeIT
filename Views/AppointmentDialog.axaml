<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:organizeIT.ViewModels"
    x:Class="organizeIT.Views.AppointmentDialog"
    x:DataType="vm:AppointmentDialogViewModel"
    Title="Termin erstellen"
    Width="400"
    Height="450"
    CanResize="False"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="False">

    <StackPanel Margin="20" Spacing="10">
        <TextBox Text="{Binding Title}" Watermark="Titel" />
        <TextBox Text="{Binding Description}" Watermark="Beschreibung" Height="60"
            AcceptsReturn="True" />
        <DatePicker SelectedDate="{Binding StartDate}" />
        <TimePicker SelectedTime="{Binding StartTime}" />
        <DatePicker SelectedDate="{Binding EndDate}" />
        <TimePicker SelectedTime="{Binding EndTime}" />
        <TextBox Text="{Binding Location}" Watermark="Ort" />

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
            <Button Content="Abbrechen" Command="{Binding CancelCommand}" />
            <Button Content="Speichern" Command="{Binding SaveCommand}" />
        </StackPanel>
    </StackPanel>
</Window> 